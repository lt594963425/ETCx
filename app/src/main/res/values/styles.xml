<resources>

    <style name="AppTheme" parent="AppTheme.Base" />

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!--标题颜色 -->
        <item name="colorPrimary">@color/white</item>
        <!--状态栏颜色-->
        <item name="colorPrimaryDark">@color/colorOrange</item>
        <!--Window color-->
        <item name="android:windowBackground">@color/white</item>
        <item name="android:actionMenuTextAppearance">@style/CActionMenuTextAppearance</item>
    </style>

    <style name="BG_GRAY" parent="AppTheme.Base">
        <!--Window color-->
        <item name="android:windowBackground">@color/space_line_color</item>
    </style>

    <style name="CActionMenuTextAppearance" parent="@android:style/TextAppearance.Holo.Small">
        <item name="android:textSize">@dimen/abc_text_size_subtitle_material_toolbar</item>
        <item name="android:textStyle">normal</item>
        <item name="actionMenuTextAppearance">
            @android:style/TextAppearance.Holo.Widget.ActionBar.Menu
        </item>
    </style>
    <!--toolbar的样式-->
    <style name="toolbar_theme" parent="@style/ThemeOverlay.AppCompat.Light">
        <item name="android:textSize">18sp</item>
        <!--修改toolbar的Title(大标题)颜色-->
        <item name="android:textColorPrimary">@color/colorOrange</item>
        <!--修改toolbar的subtitle(小标题)颜色-->
        <item name="subtitleTextColor">@color/colorOrange</item>
        <!--修改toolbar的图标颜色.-->
        <item name="colorControlNormal">@color/colorOrange</item>
    </style>
    <style name="popup_theme" parent="@style/ThemeOverlay.AppCompat.Light">
        <!--设置背景-->
        <item name="android:background">@android:color/white</item>
        <!--设置字体颜色-->
        <item name="android:textColor">@color/colorOrange</item>
        <!--设置不覆盖锚点-->
        <item name="overlapAnchor">false</item>
    </style>
    <style name="TranslucentActivityTheme" parent="AppTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="style0">
        <item name="android:textSize">18dip</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="style1">
        <item name="android:textSize">23dip</item>
        <item name="android:textColor">@color/colorOrange</item>
    </style>

    <!-- popup window 显示消失动画-->
    <style name="PopWindowAnimStyle">
        <item name="android:windowShowAnimation">@anim/dialog_enter</item>
        <!-- 指定显示的动画xml  -->
        <item name="android:windowHideAnimation">@anim/dialog_exit</item>
        <!-- 指定消失的动画xml  -->
    </style>

    <style name="LoginDialogStyle">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
</resources>
