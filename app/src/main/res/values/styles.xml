<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="style_15_EBEBEB_BOLD">
        <item name="android:textSize">15.0sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ffebebeb</item>
    </style>

    <style name="style_18_BEBEBE_BOLD">
        <item name="android:textSize">18.0sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="style_14_4B4B4B">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">#ff4b4b4b</item>
    </style>

    <style name="style_14_A10D0B">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">#ffa10d0b</item>
    </style>

    <style name="style_18_A10D0B_BOLD">
        <item name="android:textSize">18.0sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ffa10d0b</item>
    </style>

    <style name="style_18_000000_BOLD">
        <item name="android:textSize">18.0sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ff000000</item>
    </style>

    <style name="style_17_FFFFFF_BOLD">
        <item name="android:textSize">17.0sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ffffffff</item>
    </style>

    <style name="style_20_666666">
        <item name="android:textSize">20.0sp</item>
        <item name="android:textColor">#ff666666</item>
    </style>

    <style name="style_15_666666">
        <item name="android:textSize">15.0sp</item>
        <item name="android:textColor">#ff666666</item>
    </style>

    <style name="style_13_9F9F9F">
        <item name="android:textSize">13.0sp</item>
        <item name="android:textColor">#ff9f9f9f</item>
    </style>
    <style name="style_14_C21513_BOLD">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ffc21513</item>
    </style>

    <style name="ToolbarTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">24dp</item>
    </style>
    <style name="bigRedButton" parent="@style/bigButton">
        <item name="android:background">@drawable/bg_btn_style_red</item>
    </style>
    <style name="bigButton">
        <item name="android:textColor">@color/white_color_selector</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!-- 搜索按钮布局 -->
    <style name="search_layout_btn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20dp</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textColor">@drawable/tab_selector_textcolor</item>
    </style>
</resources>
