<resources>

    <style name="AppTheme" parent="AppTheme.Base" />

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!--标题颜色 -->
        <item name="colorPrimary">@color/white</item>
        <!--状态栏颜色-->
        <item name="colorPrimaryDark">@color/colorOrange</item>
        <!--Window color-->
        <item name="android:windowBackground">@color/white</item>
        <item name="android:actionMenuTextAppearance">@style/CActionMenuTextAppearance</item>
    </style>
    <style name="CActionMenuTextAppearance" parent="@android:style/TextAppearance.Holo.Small">
        <item name="android:textSize">@dimen/abc_text_size_subtitle_material_toolbar</item>
        <item name="android:textStyle">normal</item>
        <item name="actionMenuTextAppearance">
            @android:style/TextAppearance.Holo.Widget.ActionBar.Menu
        </item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#fc7520</item>
    </style>

    <style name="TranslucentActivityTheme" parent="AppTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowFullscreen">true</item>
    </style>
    <style name="style0">
        <item name="android:textSize">18dip</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>
    <style name="style1">
        <item name="android:textSize">23dip</item>
        <item name="android:textColor">@color/colorOrange</item>
    </style>
</resources>
