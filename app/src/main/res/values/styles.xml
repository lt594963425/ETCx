<resources>

    <style name="AppTheme" parent="AppTheme.Base" />

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!--标题颜色 -->
        <item name="colorPrimary">@color/white</item>
        <!--状态栏颜色-->
        <item name="colorPrimaryDark">@color/colorOrange</item>
        <!--Window color-->
        <item name="android:windowBackground">@color/white</item>
        <item name="android:actionMenuTextAppearance">@style/CActionMenuTextAppearance</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="CActionMenuTextAppearance" parent="@android:style/TextAppearance.Holo.Small">
        <item name="android:textSize">@dimen/abc_text_size_subtitle_material_toolbar</item>
        <item name="android:textStyle">normal</item>
        <item name="actionMenuTextAppearance">
            @android:style/TextAppearance.Holo.Widget.ActionBar.Menu
        </item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#fc7520</item>
    </style>

</resources>
