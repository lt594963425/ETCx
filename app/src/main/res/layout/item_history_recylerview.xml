<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_card_name"
                android:layout_width="wrap_content"
                android:layout_height="27dp"
                android:gravity="center_vertical"
                android:text="李小姐"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/item_car_number"
                android:layout_width="wrap_content"
                android:layout_height="27dp"
                android:layout_marginLeft="18dp"
                android:layout_toRightOf="@+id/item_card_name"
                android:gravity="center_vertical"
                android:text="湘A123456252"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/item_recharge_card_number"
                android:layout_width="wrap_content"
                android:layout_height="27dp"
                android:layout_below="@+id/item_card_name"
                android:gravity="center_vertical"
                android:text="41234567891234567890"
                android:textSize="18sp" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorbg" />
</android.support.v7.widget.CardView>