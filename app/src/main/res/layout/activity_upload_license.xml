<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <TextView
        android:id="@+id/upload_license_hint_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:maxLines="2"
        android:paddingBottom="18dp"
        android:paddingLeft="22dp"
        android:paddingRight="22dp"
        android:paddingTop="23dp"
        android:textColor="@color/textcolor"
        android:textSize="13sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:paddingLeft="22dp"
        android:paddingRight="22dp"
        android:text="@string/id_card_figure"
        android:textColor="@color/textcolor"
        android:textSize="13sp" />

    <LinearLayout
        android:id="@+id/license_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        >

        <RelativeLayout
            android:id="@+id/first_license_layout"
            android:layout_width="270dp"
            android:layout_height="202dp"
            android:background="@drawable/bg_upload_license_image">

            <ImageView
                android:id="@+id/id_card_imageview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_marginTop="8dp"
                android:src="@mipmap/id_card_xxxxxxx" />

            <ImageView
                android:id="@+id/camera_imageview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="15dp"
                android:layout_marginTop="18dp"
                app:srcCompat="@drawable/vd_camera" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/two_license_layout"
            android:layout_width="181dp"
            android:layout_height="128dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/bg_upload_license_image"
            android:layout_marginLeft="8dp"
            >

            <ImageView
                android:id="@+id/org_license_imageview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_marginTop="8dp"
                android:src="@mipmap/id_card_two" />

            <ImageView
                android:id="@+id/camera_imageview2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="15dp"
                android:layout_marginTop="18dp"
                app:srcCompat="@drawable/vd_camera" />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:paddingLeft="22dp"
        android:paddingRight="22dp"
        android:text="@string/drive_license_figure"
        android:textColor="@color/textcolor"
        android:textSize="13sp" />

    <RelativeLayout
        android:layout_width="320dp"
        android:layout_height="133dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="3dp"
        android:background="@drawable/bg_upload_license_image">

        <ImageView
            android:id="@+id/drive_license_imageview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="8dp"
            android:src="@mipmap/xxxxx" />

        <ImageView
            android:id="@+id/drive_license_camera_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="15dp"
            android:layout_marginTop="18dp"
            app:srcCompat="@drawable/vd_camera" />
    </RelativeLayout>

    <Button
        android:id="@+id/commit_button"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="33dp"
        android:background="@drawable/bg_regist_button"
        android:gravity="center"
        android:text="@string/upload"
        android:textColor="@color/white"
        android:textSize="16sp" />


</LinearLayout>