<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/bg_gray"
    android:gravity="center_horizontal"
    >

    <include layout="@layout/toolbar" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="41dp"
        app:srcCompat="@drawable/vd_store_success"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/textcolor"
        android:text="@string/store_success"
        />
    <TextView
        android:id="@+id/owner_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/textcolor"
        android:textSize="15sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="39dp"
        android:layout_marginLeft="38dp"
        android:layout_marginRight="38dp"
        />
    <TextView
        android:id="@+id/card_id_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/textcolor"
        android:textSize="15sp"
        android:layout_marginTop="11dp"
        android:layout_marginLeft="38dp"
        android:layout_marginRight="38dp"
        />
    <TextView
        android:id="@+id/car_id_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/textcolor"
        android:textSize="15sp"
        android:layout_marginTop="11dp"
        android:layout_marginLeft="38dp"
        android:layout_marginRight="38dp"
        />
    <TextView
        android:id="@+id/store_money_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/textcolor"
        android:textSize="15sp"
        android:layout_marginTop="11dp"
        android:layout_marginLeft="38dp"
        android:layout_marginRight="38dp"
        />
    <TextView
        android:id="@+id/balance_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/textcolor"
        android:textSize="15sp"
        android:layout_marginTop="11dp"
        android:layout_marginLeft="38dp"
        android:layout_marginRight="38dp"
        />

    <Button
        android:id="@+id/return_index_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="34dp"
        android:elevation="@null"
        android:text="@string/return_index"
        android:textSize="16sp"
        android:textColor="@color/colorGray"
        android:layout_marginLeft="38dp"
        android:layout_marginRight="38dp"
        android:background="@drawable/bg_white_line"
        style="?android:attr/borderlessButtonStyle"
        android:layout_marginTop="30dp"
        />

</LinearLayout>
