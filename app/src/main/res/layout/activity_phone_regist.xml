<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#808080">

    <RelativeLayout
        android:id="@+id/phonenumber_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="26dp"
        android:layout_marginRight="26dp"
        android:layout_marginTop="33dp"
        android:background="@drawable/bg_login_input"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/phonenumber_edt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/phonenumber_delete"
            android:background="@null"
            android:drawableLeft="@mipmap/wo"
            android:drawablePadding="16dp"
            android:hint="@string/please_input_phonenumber"
            android:inputType="phone"
            android:maxLength="11" />

        <ImageView
            android:id="@+id/phonenumber_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingLeft="16dp"
            android:src="@mipmap/wo" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/password_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/phonenumber_layout"
        android:layout_marginLeft="26dp"
        android:layout_marginRight="26dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_login_input"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/password_edt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/eye"
            android:background="@null"
            android:drawableLeft="@mipmap/suo"
            android:drawablePadding="16dp"
            android:hint="@string/please_input_password"
            android:inputType="textPassword"
            android:maxLength="16" />

        <ImageView
            android:id="@+id/eye"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingLeft="16dp"
            android:src="@mipmap/wo" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/verificode_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/password_layout"
        android:layout_marginLeft="26dp"
        android:layout_marginRight="26dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_login_input"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/verificode_edt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:drawableLeft="@mipmap/yanzhen"
            android:drawablePadding="16dp"
            android:inputType="number"
            android:layout_toLeftOf="@+id/get_verificode_button"
            android:layout_alignParentLeft="true"
            />
        <Button
            android:id="@+id/get_verificode_button"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:textColor="@color/white"
            android:text="@string/get_verifycode"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="16dp"
            android:background="@drawable/bg_regist_button"
            />
    </RelativeLayout>

    <Button
        android:id="@+id/regist_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/verificode_layout"
        android:layout_marginLeft="26dp"
        android:layout_marginRight="26dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/bg_regist_button"
        android:text="@string/regist"
        android:textColor="@color/white" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/regist_protocal"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/protocal_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/protocal"
            android:textColor="@color/colorprotocal"
            android:textSize="14sp" />
    </LinearLayout>
</RelativeLayout>