<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="#acb8be"
    android:layout_height="match_parent">


    <EditText
        android:inputType="number"
        android:maxLength="11"
        android:drawableLeft="@mipmap/wo"
        android:id="@+id/et_setpnum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="请输入您的手机号码"
        android:ems="10"
        android:layout_marginTop="44dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button

        android:id="@+id/bt_rg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorprotocal"
        android:text="注册"
        android:layout_marginBottom="108dp"
        android:layout_above="@+id/linearLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:hint="请设置密码"
        android:drawableLeft="@mipmap/suo"
        android:id="@+id/et_setpwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        android:layout_below="@id/et_setpnum"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:hint="请输入验证码"
        android:drawableLeft="@mipmap/yanzhen"
        android:id="@+id/et_yanzhen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_below="@+id/et_setpwd"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_above="@+id/et_setpwd"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:id="@+id/linearLayout">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:padding="5dp"
            android:text="@string/regist_protocal"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp"
            android:text="@string/protocal"
            android:textColor="@color/colorprotocal"
            android:textSize="14sp" />
    </LinearLayout>

    <Button
        android:background="@color/colorprotocal"
        android:id="@+id/bt_getyanzhen"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
         android:textSize="12dp"
        android:text="获取验证码"
        android:layout_alignBaseline="@id/et_yanzhen"
        android:layout_alignBottom="@id/et_yanzhen"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="12dp"
        android:layout_marginEnd="12dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/search"
        android:layout_below="@+id/et_setpnum"
        android:layout_alignRight="@+id/bt_getyanzhen"
        android:layout_alignEnd="@+id/bt_getyanzhen"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="17dp" />

</RelativeLayout>